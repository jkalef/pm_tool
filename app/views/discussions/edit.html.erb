<h1>Edit Your Discussion</h1>

<%# form to edit the discussion %>
<%= form_for @discussion, url: project_discussion_path(@project, @discussion) do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<br>
	<%= f.label :description %>
	<%= f.text_area :description %>
	<br>
	<%= f.submit "Submit Changes" %>
<% end %>
